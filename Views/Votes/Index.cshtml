@model IEnumerable<VotingApplication.Models.Vote>

@{
    ViewBag.Title = "Votes";
}

<h2>Votes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Option.Name)
        </th>
