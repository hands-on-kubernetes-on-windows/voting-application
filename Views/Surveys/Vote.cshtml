@model VotingApplication.Models.Survey

@{
    ViewBag.Title = $"{Model.Name} - Vote!";
}

<div class="container">
    <form method="post">
        @Html.AntiForgeryToken()
        <div class="col-md-4"></div>

        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="fa fa-line-chart"></span> @Html.DisplayFor(model => model.Name)</h3>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        @foreach (var option in Model.Options)
                        {
                            <li class="list-group-item">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="optionIds" value="@option.Id" /> @Html.DisplayFor(model => option.Name)
                                    </label>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="panel-footer text-center">
                    <button type="submit" class="btn btn-primary btn-block btn-sm">
                        Vote!
                    </button>
                    @Html.ActionLink("View Results", "Results", new { id = Model.Id })
                </div>
            </div>
        </div>
    </form>
</div>



